<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".Fragment.HitungGiziFragment">

    <EditText
        android:id="@+id/et_bb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="Berat Badan (kg)" />

    <EditText
        android:id="@+id/et_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:hint="Tinggi Badan (cm)" />

    <Button
        android:id="@+id/btn_hitung_imt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape_orange"
        android:text="Hitung Indeks Massa Tubuh" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/dark" />

    <TextView
        android:id="@+id/tv_imt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hitung IMT (Indeks Massa Tubuh) Anak anda segera"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="18sp" />

</LinearLayout>